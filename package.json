{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --concurrency 20",
    "lint": "turbo lint",
    "lint-staged-husky": "lint-staged",
    "test": "turbo run test",
    "build:bot": "turbo run build --scope x7-bot",
    "start:bot": "cd apps/bot && pnpm start",
    "clean": "turbo run clean",
    "format-lint": "prettier --config prettier.config.js --check --ignore-unknown .",
    "format-fix": "prettier --config prettier.config.js --write --ignore-unknown -l .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,tsx, jsx}": [
      "eslint --quiet --fix"
    ],
    "*.{json,md,html,js,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": "18.x"
  },
  "packageManager": "pnpm@7.15.0",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/types": "^17.4.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.3.0",
    "@types/react": "^18.2.11",
    "@types/react-dom": "^18.2.4",
    "commitizen": "^4.3.0",
    "eslint": "^8.42.0",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "jest-environment-jsdom": "^29.5.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "turbo": "^1.10.3",
    "vercel": "^30.2.1"
  }
}
