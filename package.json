{
  "name": "x7finance",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --color",
    "build:ui": "turbo run build --filter=ui --color --parallel",
    "clean": "git clean -xdf node_modules dist .next",
    "clean:workspaces": "turbo clean --parallel",
    "dev": "turbo run dev --parallel",
    "preinstall": "npx only-allow pnpm",
    "lint": "run-p lint:turbo lint:md lint:package-json manypkg",
    "lint:dist": "turbo run lint:dist --parallel",
    "lint:fix": "turbo lint:fix && pnpm lint:package-json",
    "lint:md": "markdownlint --fix **/*.md --ignore '**/node_modules/**' --ignore '**/CHANGELOG.md'",
    "lint:package-json": "sort-package-json package.json {apps,packages}/*/package.json",
    "lint:staged": "lint-staged --allow-empty",
    "lint:turbo": "turbo lint",
    "lint:types": "turbo lint:types",
    "manypkg": "manypkg check",
    "prepare": "is-ci || husky install",
    "type-check": "turbo type-check"
  },
  "dependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@commitlint/types": "^17.4.4",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@manypkg/cli": "^0.21.0",
    "@types/node": "^20.4.0",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/shell-quote": "^1.7.1",
    "@wayofdev/eslint-config-bases": "^2.0.10",
    "@wayofdev/lint-staged-config": "^2.0.7",
    "@wayofdev/markdownlint-config": "^2.0.6",
    "eslint": "^8.44.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.0",
    "markdownlint": "^0.29.0",
    "markdownlint-cli": "^0.35.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sort-package-json": "^2.5.0",
    "turbo": "^1.10.7",
    "typescript": "^5.1.3",
    "vercel": "^31.0.1"
  },
  "packageManager": "pnpm@8.6.2",
  "engines": {
    "node": ">=v18.16.0"
  }
}
